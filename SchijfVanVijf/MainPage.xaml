<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchijfVanVijf.MainPage">

    <VerticalStackLayout Padding="30,0" Spacing="25">

        <Button
            x:Name="RecipeButton"
            Text="Find Recipes"
            Command="{Binding SearchCommand}" />

        <StackLayout IsVisible="{Binding ResultsVisible}">
            <Label Text="Matching Recipes:"
                   FontAttributes="Bold"
                   FontSize="18"
                   Margin="0,10,0,5" />

            <CollectionView ItemsSource="{Binding ResultLabels}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" FontSize="16" Margin="5,2"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>

    </VerticalStackLayout>

</ContentPage>
