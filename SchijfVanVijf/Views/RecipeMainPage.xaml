<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:SchijfVanVijf.Models"
             xmlns:viewmodel="clr-namespace:SchijfVanVijf.ViewModel"
             x:Class="SchijfVanVijf.Views.RecipeMainPage"
             Title="Recipes">

    <!-- TODO: Update categories and resize buttons to fit-->
    <!-- Creates the layout for the recipe list-->
    <!-- Links the recipe buttons to the OnButtonClick event-->
    <Grid RowDefinitions="*, Auto"
          BackgroundColor="White">
        <ScrollView>
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding RecipeList}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Text="{Binding Title}"
                            Clicked="OnButtonClick"
                            CommandParameter="{Binding .}"
                            HorizontalOptions="Center"
                            FontSize="Large"
                            BackgroundColor="Green"
                            TextColor="Black"
                            CornerRadius="5"
                            BorderColor="Black"
                            BorderWidth="2"
                            Margin="10"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>