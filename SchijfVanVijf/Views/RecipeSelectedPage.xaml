<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:SchijfVanVijf.Models"
             xmlns:viewmodel="clr-namespace:SchijfVanVijf.ViewModel"
             x:Class="SchijfVanVijf.Views.RecipeSelectedPage"
             Title="Recipe">
    <!-- Creates the layout for the individual recipes-->
    <!-- Creates two scrollviews for the ingredient and instruction labels-->
    <Grid
        BackgroundColor="White"
        Padding="20"
        RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Text="{Binding Title}"
            TextColor="Black"
            FontSize="Header"
            FontAttributes="Bold"/>
        <ScrollView x:Name="scrollView"
                    Grid.Row="1"
                    Grid.Column="0"
                    BackgroundColor="LightGreen">
            <!--Scrolled="OnScrollViewScrolled"> -->
            <StackLayout>
                <Label
                    Margin="10"
                    HorizontalTextAlignment="Center"
                    FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Ingredients" TextColor ="Black" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                    <!-- TODO: Bind the ingredients to the label-->
                </Label>
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding Ingredients}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label
                            Text="{Binding Name}"
                            HorizontalOptions="Center"
                            TextColor="Black">
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
            </StackLayout>
        </ScrollView>
        <ScrollView x:Name="scrollView2"
                    Grid.Row="1"
                    Grid.Column="1"
                    BackgroundColor="LightGreen"
                    Margin="20,0,0,0">
            <StackLayout>
                <Label
                    Margin="10"
                    HorizontalTextAlignment="Center"
                    FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Instructions" TextColor ="Black" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                    Text="{Binding Recipe.Discription}">
                </Label>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>