<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:SchijfVanVijf.Models"
             xmlns:viewmodel="clr-namespace:SchijfVanVijf.ViewModel"
             x:Class="SchijfVanVijf.Views.RecipeSelectedPage"
             Title="Recipe">
    <!-- Creates the layout for the individual recipes-->
    <!-- Creates two scrollviews for the ingredient and instruction labels-->
    <Grid
        BackgroundColor="White"
        Padding="20"
        RowSpacing="15"
        ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            Grid.Row="0"
            Text="{Binding Recipe.Title}"
            TextColor="Black"
            FontSize="Header"
            FontAutoScalingEnabled="True"
            FontAttributes="Bold"/>
        <Button
            Grid.Column="2"
            Grid.Row="0"
            ImageSource="remove_icon.png"
                    BackgroundColor="Green"
                    WidthRequest="20"
                    HeightRequest="20"
                    CornerRadius="25"
                    Padding="0"
                    HorizontalOptions="End"
                    Command="{Binding LessCommand}">
            <Button.Shadow>
                <Shadow Brush="Black" Opacity="0.3" Offset="2,2" Radius="5"/>
            </Button.Shadow>
        </Button>
        <Button
            Grid.Column="4"
            Grid.Row="0"
            ImageSource="add_icon.png"
                    BackgroundColor="Green"
                    WidthRequest="20"
                    HeightRequest="20"
                    CornerRadius="25"
                    Padding="0"
                    HorizontalOptions="Start"
                    Command="{Binding MoreCommand}">
            <Button.Shadow>
                <Shadow Brush="Black" Opacity="0.3" Offset="2,2" Radius="5"/>
            </Button.Shadow>
        </Button>
        <Label
            Grid.Column="3"
            Grid.Row="0"
            Text="{Binding servingsText}"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
            TextColor="Black"
            BackgroundColor="LightGreen"
            FontSize="Medium"/>
        
        <ScrollView x:Name="scrollView"
                    Grid.Row="1"
                    Grid.Column="0"
                    BackgroundColor="LightGreen">
            <!--Scrolled="OnScrollViewScrolled"> -->
            <StackLayout
                Margin="10">
                <Label
                    HorizontalTextAlignment="Center"
                    FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Ingredients" TextColor ="Black" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                    <!-- TODO: Bind the ingredients to the label-->
                </Label>
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding Ingredients}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label
                            Text="{Binding}"
                            HorizontalOptions="Center"
                            TextColor="Black">
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
            </StackLayout>
        </ScrollView>
        <ScrollView x:Name="scrollView2"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="4"
                    BackgroundColor="LightGreen">
            <StackLayout 
                Margin="10">
                <Label
                    HorizontalTextAlignment="Center"
                    FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Instructions" TextColor ="Black" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label
                    Text="{Binding Recipe.Discription}"
                    TextColor="Black">
                </Label>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>