<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:SchijfVanVijf.Models"
             xmlns:viewmodel="clr-namespace:SchijfVanVijf.ViewModel"
             x:Class="SchijfVanVijf.Views.FilterMainPage"
             Title="FilterMainPage">

    <!-- TODO: Update categories and resize buttons to fit-->
    <Grid RowDefinitions="*, Auto"
          BackgroundColor="White">
        <ScrollView>
            <VerticalStackLayout>
                <!--Creates the layout for the ingredient category buttons and links it to the OnButtonClick event-->
                <Button Text="Meat"
                        Grid.Row="1"
                        HorizontalOptions="Fill"
                        FontSize="18"
                        BackgroundColor="Green"
                        TextColor="Black"
                        CornerRadius="0"
                        BorderColor="Black"
                        BorderWidth="2"
                        Margin="2"
                        Clicked ="OnButtonClick"/>
                <Button Text="Fish"
                        Grid.Row="2"
                        HorizontalOptions="Fill"
                        FontSize="18"
                        BackgroundColor="Green"
                        TextColor="Black"
                        CornerRadius="0"
                        BorderColor="Black"
                        BorderWidth="2"
                        Margin="2"
                        Clicked ="OnButtonClick"/>
                <Button Text="Vegetables"
                        Grid.Row="3"
                        HorizontalOptions="Fill"
                        FontSize="18"
                        BackgroundColor="Green"
                        TextColor="Black"
                        CornerRadius="0"
                        BorderColor="Black"
                        BorderWidth="2"
                        Margin="2"
                        Clicked ="OnButtonClick"/>
                <Button Text="Fruit"
                        Grid.Row="4"
                        HorizontalOptions="Fill"
                        FontSize="18"
                        BackgroundColor="Green"
                        TextColor="Black"
                        CornerRadius="0"
                        BorderColor="Black"
                        BorderWidth="2"
                        Margin="2"
                        Clicked ="OnButtonClick"/>
            </VerticalStackLayout>
        </ScrollView>
        <!--Creates the layout for the OK button and links it to the OkbuttonClick event-->
        <Button Text="OK"
                Grid.Row="5"
                HeightRequest="50"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="1"
                BackgroundColor="{StaticResource Primary}"
                Margin="20,20"
                Clicked = "OkButtonClick"/>
    </Grid>

</ContentPage>